#include <stdio.h>
#include <string.h>
int main() {
    char n[50]; 
    int age;
    printf("Hello, enter your name: ");
    fgets(n, sizeof(n), stdin);
    n[strcspn(n, "\n")] = '\0';
    printf("What's your age?: ");
    scanf("%d", &age);
    printf("Hi %s, you are %d years old.\n", n, age);
    if (age >= 18) {
        printf("So, you are an adult.\n");
    } else {
        printf("So, you are a minor.\n");
    }

    return 0;
}
